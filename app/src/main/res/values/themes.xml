<resources xmlns:ns1="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.KNote" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/primary_font</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/secondary_font</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:fontFamily">@font/kanit_regular</item>
        <item name="fontFamily">@font/kanit_regular</item>
        <item name="dialogTheme">
            @style/PopupDialogTheme
        </item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">?attr/actionBarSize</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.KNote.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/kanit_regular</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="fontFamily">@font/kanit_regular</item>
    </style>

    <style name="Theme.KNote.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Color -->
        <item name="colorControlNormal">@color/primary_font</item>
        <item name="android:fontFamily">@font/kanit_regular</item>
        <item name="popupMenuStyle">@color/secondary</item>
    </style>

    <style name="PopupDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:background">@color/secondary</item>
        <item name="fontFamily">@font/kanit_regular</item>
        <item name="android:colorAccent">@color/secondary_font</item>
        <item name="android:textColor">@color/secondary_font</item>
        <item name="android:textColorPrimary">@color/secondary_font</item>
        <item name="iconTint">@color/secondary_font</item>
        <item name="buttonTint">@color/secondary_font</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonStyle</item>
    </style>

    <style name="Theme.KNote.PopupMenuStyle" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/dropdown_menu_tag</item>
        <item name="android:textColor">@color/secondary_font</item>
        <item name="actionMenuTextColor">@color/secondary_font</item>
        <item name="android:dropDownVerticalOffset">-2dip</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/secondary_font</item>
    </style>

    <style name="Theme.KNote.NumberPicker">
        <item name="colorAccent">@color/secondary_font</item>
        <item name="android:colorControlNormal">@color/secondary_font</item>
        <item name="android:textColorPrimary">@color/secondary_font</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MaterialComponents.AutoCompleteTextView.OutlinedBox
        </item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="endIconMode">dropdown_menu</item>
        <item name="endIconTint">@color/primary_font</item>
        <item name="endIconDrawable">@drawable/ic_popup</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.AutoCompleteTextView.OutlinedBox">
        <item name="autoCompleteTextViewStyle">
            @style/Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox
        </item>
    </style>

    <style name="Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox" parent="Base.Widget.MaterialComponents.AutoCompleteTextView"/>
    <style name="Base.Widget.MaterialComponents.AutoCompleteTextView" parent="Base.V14.Widget.MaterialComponents.AutoCompleteTextView"/>
    <style name="Base.V14.Widget.MaterialComponents.AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="enforceMaterialTheme">true</item>
        <item name="enforceTextAppearance">true</item>
        <item name="android:paddingStart" ns1:ignore="NewApi">0dp</item>
        <item name="android:paddingEnd" ns1:ignore="NewApi">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="android:dropDownVerticalOffset">@dimen/mtrl_exposed_dropdown_menu_popup_vertical_offset</item>
        <item name="android:popupElevation" ns1:ignore="NewApi">@dimen/mtrl_exposed_dropdown_menu_popup_elevation</item>
    </style>
    <style name="Widget.AppCompat.AutoCompleteTextView" parent="Base.Widget.AppCompat.AutoCompleteTextView">
    </style>


    <style name="Theme.KNote.PopupOverlay" parent="Theme.AppCompat.Light">
        <item name="android:colorBackground">@color/secondary</item>
        <item name="android:textColor">@color/secondary_font</item>
        <item name="cornerRadius">16dp</item>
    </style>


</resources>